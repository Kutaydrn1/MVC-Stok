@model MvcStok.Models.Entity.TBLKATEGORILER

@{
    ViewBag.Title = "GUNCELLE";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("GUNCELLE", "Kategori", new { id = Model.KATEGORIID }, FormMethod.Post))
{
    @Html.HiddenFor(model => model.KATEGORIID) // Gizli alan ile kategori ID'sini gönderiyoruz

    <div class="form-group">
        @Html.LabelFor(model => model.KATEGORIAD, htmlAttributes: new { @class = "control-label" })
        @Html.TextBoxFor(model => model.KATEGORIAD, new { @class = "form-control" })
    </div>

    <input type="submit" value="Güncelle" class="btn btn-primary" />
}

<a href="@Url.Action("Index", "Kategori")" class="btn btn-secondary">Geri Dön</a>

